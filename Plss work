test('triggers handleDateSelect by changing the date', async () => {
  const user = userEvent.setup();

  render(
    <MockReduxProvider>
      <ViewManageBillingCycle />
    </MockReduxProvider>
  );

  const input = screen.getByTestId('date-picker');
  await user.clear(input);

  // Match the expected DATE_FORMAT (like 'DD/MM/YYYY' or 'MM/DD/YYYY')
  await user.type(input, '02/07/2025'); 

  await waitFor(() => {
    expect(input).toHaveValue('02/07/2025'); // adjust if needed
  });
});
