it('calls handleConfirmModal when Share is clicked', async () => {
  const { getByText, getByTestId } = render(<TdsPage />);

  await user.selectOptions(getByTestId('year-dropdown'), '2023-2024');
  await user.selectOptions(getByTestId('quarter-dropdown'), 'Q1');

  // Click the "Share" button (left footer)
  await user.click(getByText(/Share/i));

  // It should trigger tdsDownloadCall â†’ dispatch
  await waitFor(() => {
    expect(mockDispatch).toHaveBeenCalled();
  });
});
