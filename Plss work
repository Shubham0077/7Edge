test('shows modal when enhanceCreditLimit matches crlim', () => {
  const mockState = {
    creditcardCombineReducers: {
      creditCardDashboardReducer: {
        selectedCreditCardData: {
          enhanceCreditLimit: '500000',
        },
        creditCardAccountDetails: {
          crlim: '500000',
        },
      },
    },
  };

  jest.spyOn(reactRedux, 'useSelector').mockImplementation((fn) => fn(mockState));

  render(
    <MockReduxProvider>
      <YourComponent />
    </MockReduxProvider>
  );

  // âœ… Assert that the modal appeared
  expect(screen.getByTestId('limit-modal')).toBeInTheDocument();
});
