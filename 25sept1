it('should block typing e or E in price input', () => {
  render(<BidTable {...mockProps} />);

  const priceField = screen.getByTestId('price-0');
  const priceInput: any = priceField.querySelector('input');

  // Try typing 'e'
  fireEvent.keyDown(priceInput, { key: 'e', code: 'KeyE', charCode: 69 });
  fireEvent.change(priceInput, { target: { value: 'e' } });

  expect(priceInput.value).toBe(''); // should remain empty

  // Try typing 'E'
  fireEvent.keyDown(priceInput, { key: 'E', code: 'KeyE', charCode: 69 });
  fireEvent.change(priceInput, { target: { value: 'E' } });

  expect(priceInput.value).toBe(''); // should remain empty
});
