it('should prevent entering ".", "e" or "E" in quantity input', () => {
  render(<BidTable {...mockProps} />);

  const quantityField = screen.getByTestId('quantity-0');
  const quantityInput: any = quantityField.querySelector('input');

  // try typing '.'
  fireEvent.keyDown(quantityInput, { key: '.' });
  fireEvent.change(quantityInput, { target: { value: '.' } });
  expect(quantityInput.value).toBe(''); // should stay empty

  // try typing 'e'
  fireEvent.keyDown(quantityInput, { key: 'e' });
  fireEvent.change(quantityInput, { target: { value: 'e' } });
  expect(quantityInput.value).toBe('');

  // try typing 'E'
  fireEvent.keyDown(quantityInput, { key: 'E' });
  fireEvent.change(quantityInput, { target: { value: 'E' } });
  expect(quantityInput.value).toBe('');
});
