it('should prevent entering e or E in price input', async () => {
  render(<BidTable {...mockProps} />);

  const priceField = screen.getByTestId('price-0');
  const priceInput: any = priceField.querySelector('input');

  // lowercase 'e'
  let event = new KeyboardEvent('keydown', { key: 'e' });
  Object.defineProperty(event, 'preventDefault', { value: jest.fn() });
  priceInput.dispatchEvent(event);
  expect(event.preventDefault).toHaveBeenCalled();

  // uppercase 'E'
  event = new KeyboardEvent('keydown', { key: 'E' });
  Object.defineProperty(event, 'preventDefault', { value: jest.fn() });
  priceInput.dispatchEvent(event);
  expect(event.preventDefault).toHaveBeenCalled();
});
