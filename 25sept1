it('should prevent entering e or E in price input', async () => {
  render(<BidTable {...mockProps} />);

  const priceField = screen.getByTestId('price-0');
  const priceInput: any = priceField.querySelector('input');

  const preventDefault = jest.fn();

  // simulate lowercase 'e'
  fireEvent.keyDown(priceInput, { key: 'e', preventDefault });
  expect(preventDefault).toHaveBeenCalled();

  preventDefault.mockClear();

  // simulate uppercase 'E'
  fireEvent.keyDown(priceInput, { key: 'E', preventDefault });
  expect(preventDefault).toHaveBeenCalled();
});
