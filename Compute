const nowPaymentCheck = () => {
    // const safeIsSIMPS = typeof isSIMPS !== 'undefined' ? isSIMPS : false;
    const safeIsSIMPS: boolean =
      typeof (globalThis as any).isSIMPS !== 'undefined' ? (globalThis as any).isSIMPS : false;
    if (
      transferType == ManagePayeeConstants.EXTERNAL &&
      paymentMethod != '' &&
      paymentTime != '' &&
      formattedAmount != '' &&
      (!safeIsSIMPS ? !amountErr : remarks !== '' && !amountErr && !remarksErr)
    ) {
      setButtonDisabled(false);
    } else if (
      transferType == ManagePayeeConstants.INTERNAL &&
      paymentTime != '' &&
      formattedAmount != '' &&
      (!safeIsSIMPS ? !amountErr : remarks !== '' && !amountErr && !remarksErr)
    ) {
      setButtonDisabled(false);
    } else {
      setButtonDisabled(true);
    }
  };
