// src/utils/findOldestAccount.ts

type Account = {
  accountOpenDate: string;
  [key: string]: any;
};

export function findOldestAccount(accounts: Account[]): Account | null {
  if (!Array.isArray(accounts) || accounts.length === 0) return null;

  return accounts.reduce((oldest, current) => {
    const currentDate = new Date(current.accountOpenDate);
    const oldestDate = new Date(oldest.accountOpenDate);
    return currentDate < oldestDate ? current : oldest;
  });
}
