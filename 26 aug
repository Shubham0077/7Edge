
export function lastFiveFinancialYears(
  setYears: React.Dispatch<React.SetStateAction<{ label: string; value: string }[]>>
): void {
  const today = new Date();
  const currentYear = today.getFullYear();
  const currentMonth = today.getMonth(); // 0 = Jan, 11 = Dec

  // If before April, financial year belongs to previous year
  const fyEndYear = currentMonth < 3 ? currentYear : currentYear + 1;

  const years: { label: string; value: string }[] = [];

  for (let i = 0; i < 5; i++) {
    const endYear = fyEndYear - i;
    const startYear = endYear - 1;
    const yearRange = `${startYear}-${endYear}`;
    years.push({ label: yearRange, value: yearRange });
  }

  setYears(years);
}
